def neovim_toolchain(name:str, version:str, hashes:list=[], visibility:list=["PUBLIC"]):
    """
    Downloads Neovim from GitHub and exposes the nvim binary as the entry point :<name>|nvim.

    To use this rule, add the following to your .plzconfig:

    [BuildConfig]
    nvim-tool = //...:<name>|nvim

    Args:
        name: Name of the target.
        version: Version of Neovim to download.
        hashes: List of possible hashes for the downloaded archive. Optional.
        visibility: Visibility specification. Defaults to public.
    """
    urls_by_os = {
        "darwin": [
            f"https://github.com/neovim/neovim/releases/download/{version}/nvim-macos.tar.gz",
            f"https://github.com/neovim/neovim/releases/download/{version}/nvim-macos-{CONFIG.HOSTARCH}.tar.gz",
        ],
        "linux": f"https://github.com/neovim/neovim/releases/download/{version}/nvim-linux-x86_64.tar.gz",
    }
    if CONFIG.HOSTOS not in urls_by_os:
        fail(f'neovim_toolchain rule is not supported on OS: "{CONFIG.HOSTOS}"')

    download = remote_file(
        name = tag(name, "download"),
        url = urls_by_os[CONFIG.HOSTOS],
        hashes = hashes,
        extract = True,
    )

    lua = genrule(
        name = tag(name, "lua"),
        srcs = [download],
        output_dirs = ["_out"],
        cmd = "mkdir _out && cp -r $SRCS/share/nvim/runtime/lua/* _out",
        labels = ["link:plz-out/nvim"],
    )

    return genrule(
        name = name,
        srcs = [download],
        cmd = "mv $SRCS $OUT",
        outs = [name],
        entry_points = {
            "nvim": f"{name}/bin/nvim",
        },
        binary = True,
        deps = [lua],
        output_is_complete = True,
        visibility = visibility,
        building_description = "Installing...",
    )

def neovim_plugin(name:str, deps:list=[], help_srcs:list=[], visibility:list=["PUBLIC"]):
    """
    Defines a Neovim plugin.

    Two targets are generated by this rule:
        1. <name> which collects the Lua files in the lua and plugin directories.
        2. <name>_help_gen, a runnable target which generates a help file from Lua srcs and writes it into the doc
           directory.

           To use this rule you must have nvim-tool configured under the [BuildConfig] section in your .plzconfig.
           nvim-tool is the nvim binary used to run the test file. This can either be a path or the |nvim entry point
           which is generated by the neovim_toolchain build rule.

           For example:

           [BuildConfig]
           nvim-tool = //third_party/neovim:toolchain|nvim

    Args:
        name: Name of the build target.
        deps: Dependencies of this target. Optional.
        help_srcs: Lua sources to generate the help file from. Optional.
        visibility: Visibility specification. Defaults to public.
    """
    runtimepath = package_name() or "."
    runtimepath_rule = genrule(
        name = tag(name, "runtimepath"),
        out = f"{name}.runtimepath",
        cmd = f"echo {runtimepath} > $OUT",
    )

    if help_srcs:
        nvim = check_config(
            key = "NVIM_TOOL",
            section = "BuildConfig",
            rule = "neovim_plugin",
            example = "//third_party/neovim:toolchain|nvim",
        )

        nvim_path = nvim
        data = []
        if looks_like_build_label(nvim):
            nvim_path = f"$(out_location {nvim})"
            data.append(nvim)
        help_gen = sh_cmd(
            name = f"{name}_help_gen",
            srcs = help_srcs,
            data = data,
            cmd = f"mkdir -p doc && {nvim_path} -l tools/gen_vimdoc/gen_vimdoc.lua {name}.txt $SRCS",
        )

    return filegroup(
        name = name,
        srcs = glob("lua/**.lua") + glob("plugin/**.lua") + [runtimepath_rule],
        exported_deps = deps,
        visibility = visibility,
    )

def neovim_library(name:str, srcs:list, deps:list=[], visibility:list=["PUBLIC"]):
    """
    Defines a target which collects Lua files for use by dependent targets.

    Args:
        name: Name of the build target.
        srcs: Lua sources for this target.
        deps: Dependencies of this target. Optional.
        visibility: Visibility specification. Defaults to public.
    """
    return filegroup(
        name = name,
        srcs = srcs,
        exported_deps = deps,
        visibility = visibility,
    )

def neovim_test(name:str, src:str, deps:list=[], labels:list=[], data:list=None, env:dict=None):
    """
    Defines a test target which runs a test file inside Neovim using busted (https://lunarmodules.github.io/busted).

    To use this rule you must have nvim-tool configured under the [BuildConfig] section in your .plzconfig. nvim-tool is
    the nvim binary used to run the test file. This can either be a path or the |nvim entry point which is generated by
    the neovim_toolchain build rule.

    For example:

    [BuildConfig]
    nvim-tool = //third_party/neovim:toolchain|nvim

    Args:
        name: Name of the build target.
        src: Lua test file to run.
        deps: Dependencies of this target. Optional.
        labels: Labels to apply to this target. Optional.
        data: Runtime data files for this target. Optional.
        env: Environment variables to be set inside the test sandbox. Optional.
    """
    nvim = check_config(
        key = "NVIM_TOOL",
        section = "BuildConfig",
        rule = "neovim_test",
        example = "//third_party/neovim:toolchain|nvim",
    )

    deps_rule = genrule(
        name = tag(name, "deps"),
        cmd = "$TOOL z -d -n -i . -o $OUT",
        srcs = [src],
        outs = ["deps.zip"],
        deps = deps + ["//third_party/lua:busted"],
        tools = [CONFIG.ARCAT_TOOL],
    )

    return gentest(
        name = name,
        test_cmd = [
            "$TOOLS_ARCAT x $DATA_DEPS",
            "$TOOLS_NVIM -u $DATA_INIT -l $DATA_RUNNER $DATA_SRC | sed '/./,$!d' > $RESULTS_FILE",
        ],
        labels = labels,
        test_tools = {
            "arcat": CONFIG.ARCAT_TOOL,
            "nvim": nvim,
        },
        data = {
            "src": src,
            "runner": "//build_defs:neovim_test_runner",
            "init": "//build_defs:neovim_test_init",
            "data": data,
            "deps": deps_rule,
        },
        env = env,
    )

def github_neovim_plugin(name:str, repo:str, revision:str, hashes:list=[], visibility:list=["PUBLIC"]):
    """
    Downloads a Neovim plugin from GitHub.

    Args:
        name: Name of the build target.
        repo: Repository to fetch from (e.g. "marcuscaisey/please.nvim").
        revision: Revision to download. This can be either a release version, commit or branch.
        hashes: List of possible hashes for the downloaded archive. Optional.
        visibility: Visibility specification. Defaults to public.
    """
    org, _, repo = repo.partition("/")
    assert repo, "Must pass a valid GitHub repo argument, e.g. marcuscaisey/please.nvim"
    download = remote_file(
        name = tag(name, "download"),
        url = f"https://github.com/{org}/{repo}/archive/{revision}.zip",
        hashes = hashes,
        extract = True,
    )
    runtimepath = genrule(
        name = tag(name, "runtimepath"),
        srcs = [download],
        out = f"{name}.runtimepath",
        cmd = f"echo $SRC > $OUT",
    )
    lua = genrule(
        name = tag(name, "lua"),
        srcs = [download],
        output_dirs = ["_out"],
        cmd = "mkdir -p _out && cp -r $SRCS/lua/* _out",
        labels = ["link:plz-out/nvim"],
    )
    return filegroup(
        name = name,
        srcs = [
            download,
            runtimepath,
        ],
        output_is_complete = True,
        deps = [lua],
        visibility = visibility,
    )

def github_neovim_tree_sitter_parser(name:str, lang:str, repo:str, revision:str, hashes:list=[], visibility:list=["PUBLIC"]):
    """
    Downloads a tree sitter parser from GitHub and compiles it.

    Args:
        name: Name of the build target.
        lang: Language that this parser is for.
        repo: Repository to fetch from (e.g. "marcuscaisey/please.nvim").
        revision: Revision to download. This can be either a release version, commit or branch.
        hashes: List of possible hashes for the downloaded archive. Optional.
        visibility: Visibility specification. Defaults to public.
    """
    subrepo_build_file = text_file(
        name = tag(name, "subrepo_build_file"),
        content = """
COMPILER_FLAGS = [
    "-Wno-error",
]

c_library(
    name = "c",
    srcs = glob("src/*.c", allow_empty=True),
    hdrs = glob("src/tree_sitter/*.h"),
    compiler_flags = COMPILER_FLAGS,
    includes = ["src"],
    visibility = ["PUBLIC"],
)

cc_library(
    name = "cc",
    srcs = glob("src/*.cc", allow_empty=True),
    hdrs = glob("src/tree_sitter/*.h"),
    compiler_flags = COMPILER_FLAGS,
    includes = ["src"],
    visibility = ["PUBLIC"],
)

cc_shared_object(
    name = "parser",
    deps = [":c", ":cc"],
    visibility = ["PUBLIC"],
)
        """,
    )
    subrepo_name = tag(name, "subrepo")
    github_repo(
        name = subrepo_name,
        repo = repo,
        revision = revision,
        build_file = subrepo_build_file,
        hashes = hashes,
    )

    parser_target = "///" + join_path(package_name(), subrepo_name) + "//:parser"
    shared_object = genrule(
        name = tag(name, "shared_object"),
        srcs = [parser_target],
        outs = [name],
        cmd = f"mkdir -p {name}/parser && cp $SRC {name}/parser/{lang}.so",
    )

    runtimepath = genrule(
        name = tag(name, "runtimepath"),
        srcs = [shared_object],
        out = f"{name}.runtimepath",
        cmd = f"echo $SRC > $OUT",
    )

    return filegroup(
        name = name,
        srcs = [
            shared_object,
            runtimepath,
        ],
        visibility = visibility,
    )
