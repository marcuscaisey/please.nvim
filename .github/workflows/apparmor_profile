# Allow Please and its sandbox binary to create unprivileged user namespaces.
# These are used for sandboxing build actions when the appropriate config is enabled.

abi <abi/4.0>,

include <tunables/global>

/home/runner/.please/17.16.0/please  flags=(default_allow) {
  userns,
}

/home/runner/.please/plz flags=(default_allow) {
  userns,
}

/home/runner/.please/17.16.0/please_sandbox flags=(default_allow) {
  userns,
}
