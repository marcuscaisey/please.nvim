[Please]
version = 16.24.0

[Parse]
preloadbuilddefs = build_defs/neovim.build_defs

[BuildConfig]
nvim-tool = //third_party/neovim:toolchain|nvim
plenary-plugin = //third_party/neovim:plenary
lemmy-help-tool = //third_party/neovim:lemmy_help

[go]
gotool = //third_party/go:toolchain|go
delvetool = //third_party/go:dlv

[python]
disablevendorflags = true
moduledir = third_party/python

[sandbox]
build = true
; FIXME: Uncomment this when we inject a versioned plz into the tests. At the
; moment, plz tries to update itself when running them which requires talking
; to the internet.
; test = true
